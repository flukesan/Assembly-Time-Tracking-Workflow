# Application Environment
APP_ENV=development
LOG_LEVEL=INFO

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=assembly_tracking
POSTGRES_USER=assembly_user
POSTGRES_PASSWORD=change_me_in_production

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=deepseek-r1:14b

# Application Port
APP_PORT=8000

# Camera Configuration
# Add your camera RTSP URLs here
# CAMERA_1_RTSP_URL=rtsp://username:password@192.168.1.100:554/stream1
# CAMERA_2_RTSP_URL=rtsp://username:password@192.168.1.101:554/stream1

# Security (generate secure random strings for production)
SECRET_KEY=change-me-to-random-secret-key-in-production
